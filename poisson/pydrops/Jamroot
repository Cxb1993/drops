import python ;
import toolset : using ;
using gcc
     :
     :
     : <cxxflags>-W <cxxflags>-Wall <cxxflags>-pedantic <cxxflags>-O0 <cxxflags>-g <cxxflags>-fopenmp <cxxflags>-fPIC <linkflags>-fopenmp
     ;
using python
     : 2.7
     : "/usr/bin/python"
     ;

if ! [ python.configured ]
{
    ECHO "notice: no Python configured in user-config.jam" ;
    ECHO "notice: will use default configuration" ;
#    using python ;
}

# Specify the path to the Boost project.  If you move this project,
# adjust this path to refer to the Boost root directory.
lib libboost_python : : <name>boost_python ;
#use-project boost
#  : /usr/include ;

# Set up the project-wide requirements that everything uses the
# boost_python library from the project whose global ID is
# /boost/python.
#project
#  : requirements <library>/boost/python//boost_python ;
project : requirements <library>libboost_python ;

lib allothers
    :
    : <file>../../geom/boundary.o <file>../../geom/builder.o <file>../../out/ensightOut.o    <file>../../geom/simplex.o <file>../../geom/multigrid.o <file>../../num/unknowns.o <file>../../geom/topo.o    <file>../../poisson/poissonCoeff.o    <file>../../poisson/poisson.o <file>../../misc/problem.o <file>../../misc/utils.o <file>../../out/output.o     <file>../../num/fe.o <file>../../num/discretize.o <file>../../num/interfacePatch.o <file>../../geom/geomselect.o    <file>../../misc/params.o     <file>../../out/vtkOut.o <file>../../misc/bndmap.o <file>../../geom/bndScalarFunctions.o    <file>../../geom/bndVelFunctions.o ;

# Declare the three extension modules.  You can specify multiple
# source files after the colon separated by spaces.
python-extension drops
		 : pyconvection.cpp
		 :
		  <file>../../geom/boundary.o <file>../../geom/builder.o <file>../../out/ensightOut.o    <file>../../geom/simplex.o <file>../../geom/multigrid.o <file>../../num/unknowns.o <file>../../geom/topo.o    <file>../../poisson/poissonCoeff.o    <file>../../poisson/poisson.o <file>../../misc/problem.o <file>../../misc/utils.o <file>../../out/output.o     <file>../../num/fe.o <file>../../num/discretize.o <file>../../num/interfacePatch.o <file>../../geom/geomselect.o    <file>../../misc/params.o     <file>../../out/vtkOut.o <file>../../misc/bndmap.o <file>../../geom/bndScalarFunctions.o    <file>../../geom/bndVelFunctions.o
			<include>../../
	;

# Put the extension and Boost.Python DLL in the current directory, so
# that running script by hand works.
install convenient_copy
  : drops
  : <install-dependencies>on <install-type>SHARED_LIB <install-type>PYTHON_EXTENSION
    <location>.
 ;

# A little "rule" (function) to clean up the syntax of declaring tests
# of these extension modules.
local rule run-test ( test-name : sources + )
{
    import testing ;
    testing.make-test run-pyd : $(sources) : : $(test-name) ;
}

# Declare test targets
run-test hello : drops dropstest.py ;
